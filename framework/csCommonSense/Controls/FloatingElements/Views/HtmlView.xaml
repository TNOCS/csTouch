<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:uc="clr-namespace:csShared.Html"
     x:Class="csShared.HtmlView"
    >
    <UserControl.Resources>
        <uc:HtmlFormatter x:Key="HtmlFormatter" />
    </UserControl.Resources>
    <uc:RichTextBox
            x:Name="HtmlFormattingRichTextBox"
        TextFormatter="{StaticResource HtmlFormatter}"    
        />

</UserControl>
