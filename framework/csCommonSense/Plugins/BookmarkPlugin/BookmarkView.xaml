                        <TextBlock Text="{Binding Id}" 
                                   Grid.Column="1"
                                   TextTrimming="CharacterEllipsis"/>
                    </Grid>
                </s:SurfaceButton>
                <s:SurfaceButton x:Name="sbDelete"
                                 Grid.Column="1"
                                 Margin="1 1 8 -12"
