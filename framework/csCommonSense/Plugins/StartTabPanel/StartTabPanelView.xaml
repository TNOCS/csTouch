    </UserControl.Resources>

    <Grid HorizontalAlignment="Stretch">

        <Grid x:Name="MenuLeft"
              Width="200"
              MinHeight="{Binding BottomStartPanelMinHeight}"
              RenderTransformOrigin="0.5,0.5"
              Visibility="Visible"
              HorizontalAlignment="Left"
              MinWidth="200"
              MaxWidth="{Binding LeftPanelMaxWidth, Source={x:Static csShared:AppStateSettings.Instance}, Mode=TwoWay}"
              Margin="{Binding BottomStartPanelMargin}">

            <slideTab:SlideTabControl Orientation="Vertical"
                                      x:Name="tcMenuLeft"
                                      Style="{DynamicResource SlideTabControlStyleLeft}"
                                      Background="{Binding LeftOpacityBrush, UpdateSourceTrigger=PropertyChanged}"
                                      BorderThickness="0"
                                      Container="{Binding ElementName=MenuBottom}"
                                      Margin="0"
                                      TabStripPlacement="Right">
                <slideTab:SlideTabControl.Resources>
                    <SolidColorBrush x:Key="TabControlNormalBorderBrush"
                                     Color="#8C8E94" />
                    <Style x:Key="TabControlStyle1"
                           TargetType="{x:Type TabControl}">
