                                Stretch="Uniform" Fill="#FF000000" Width="26" Height="26" Margin="0,0,0,0"
                                RenderTransformOrigin="0.5,0.5">
                                <Path.RenderTransform>
                                    <TransformGroup>
                                        <ScaleTransform ScaleX="0.75" ScaleY="0.75" />
