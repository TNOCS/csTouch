                                 HorizontalAlignment="Center"
                                 Margin="0"
                                 VerticalAlignment="Top"
                                 Width="38"
                                 Height="38"
                                 Background="#4D000000"
                                 HorizontalContentAlignment="Center"
                                 Padding="0"
                                 Foreground="White" />
                <TextBlock Text="{Binding Title}"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  Background="Transparent"
                                  
                                  Foreground="{Binding Brush}"
                                  TextWrapping="Wrap"
                                 
                                  FontSize="18"
                                  FontWeight="Bold" />
